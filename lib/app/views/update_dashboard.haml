- if session[:user] == "player"
  #front_views.row
  - if @front_views.empty?
    .empty-phonebook.columns-12
      No entries 
  - else
    - @front_views.each do |front_view|
      .columns-4
        .front_view
          %h1= "#{front_view.title}"
          %p
            %strong Phone:
            = front_view.description
          %p
            %strong Email:
            = front_view.image_file
          .actions
            %a.button{:href => "/admin/edit/#{front_view.id}"} Edit
            %a.button{:href => "/delete/#{front_view.id}"} Delete

  #left-column{:style => "float:left; margin-right:30px; width:30%; background:#E6E6FA"}
    ="Wellcome #{session[:user]}"
    %br
    %ul
      %li
        %a{:href => "/admin/update_home"} Home
      %li
        %a{:href => "/admin/edit/1"} Who we are
      %li
        %a{:href => "/admin/edit/2"} What we carry
      %li
        %a{:href => "/admin/edit/3"} What we do
      %li
        %a{:href => "/admin/update_outfit_of_the_week"} Outfit of the Week
      %li
        %a{:href => "/admin/edit/4"} Gift Cards
      %li
        %a{:href => "/admin/edit/5"} Find us
      %li
        %a{:href => "/admin/update_blog"} Blog
      %li
        %a{:href => "/admin/update_schedule"} Schedule

  .right-column{:style => "float:left; width:65%; height:35%; background:#FFFFE0"}
- else
  = haml :not_here
